<div class="container">
  <h3>Platform Admin Dashboard</h3>
  <nav class="nav nav-tabs" id="myTab" role="tablist">
    <%= link_to "Update Account", edit_user_path(current_user), class: "nav-item nav-link" %>
    <%= link_to "View Analytics", admin_analytics_path, class: "nav-item nav-link" %>
    </div>
  </nav>
  <div class="container">
     <table class="table table-hover">
        <thead>
           <tr>
             <th>Store #</th>
             <th>Store Name</th>
             <th>Store Status</th>
             <th>Action Available</th>
             <th></th>
           </tr>
         </thead>
       </tbody>
       <% @stores.first.each do |store| %>
       <tr class="store-<%= store.id %>">
         <th scope="row">
           <%= link_to store.id, stores_path(store) %>
         </th>
         <td><%= link_to store.name, store_items_path(store) %>, <%= store.status %>
            </td>
               <td><% if store.status == 'pending' %>
               <%= link_to 'Approve', admin_stores_path(id: store.id, status: 'active'), class: 'btn btn-primary', data: { method: :patch, params: { store: { status: 'active' } } } %>
               </td>
               <td><% elsif store.status == 'active' %>
               <%= link_to 'Deny', admin_stores_path(id: store.id, status: 'denied'), class: 'btn btn-primary', data: { method: :patch, params: { store: { status: 'denied' } } } %>
               </td>
               <td></td>
             <% end %>
            <% end %>
          </table>
        </div>
      </div>
  </div>
</div>
